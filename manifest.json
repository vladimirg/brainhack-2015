{
	"manifest_version": 2,
	"name": "Readable",
	"version": "0.1",

 	"background":
    {
        "scripts": ["jquery-1.6.2.js", "jquery.lettering.js", "background.js", "shared.js"],
        "css": ["style.css"]
    },

	"options_ui": {
		// Required.
		"page": "options.html",
		// Recommended.
		"chrome_style": true
		// Not recommended; only provided for backwards compatibility,
		// and will be unsupported in a future version of Chrome (TBD).
		//"open_in_tab": true
	},


	"content_scripts": [
		{
			"matches": ["http://www.facebook.com/*", "http://stackoverflow.com/users/233721/*", "https://he.wikipedia.org/wiki/*", "http://www.ynet.co.il/*"],
			"js": ["jquery-1.6.2.js", "jquery.lettering.js", "main.js", "shared.js"]
		}
	],
	"browser_action": {
		"default_icon": "logo64.png",
		"default_popup": "/vertical/vertical.html"
  	},
  	"permissions": [
        "storage",
   		"activeTab",
		"contextMenus",
		"tabs"],
	"web_accessible_resources": [
		"style.css",
		"style2.css"
	],
	"icons": {
      "16": "logo32.png",
      "48": "logo64.png",
      "128": "logo64.png"
    }
}
